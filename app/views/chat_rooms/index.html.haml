%p#notice= notice
%h1 Chat Rooms
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @chat_rooms.each do |chat_room|
      %tr
        %td= chat_room.name
        %td= link_to 'Show', chat_room
        %td= link_to 'Edit', edit_chat_room_path(chat_room)
        %td= link_to 'Destroy', chat_room, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Chat Room', new_chat_room_path
